[Unit]
Description=Redis server
Wants=network-online.target
After=network-online.target

[Service]
User=rpi
ExecStart=/usr/bin/redis-server
ExecStartPost=/home/rpi/projects/.virtualenvs/mainframe/bin/python /home/rpi/projects/mainframe/backend/manage.py send_debug_message "[[redis]] up"
ExecStopPost=/home/rpi/projects/.virtualenvs/mainframe/bin/python /home/rpi/projects/mainframe/backend/manage.py send_debug_message "[[redis]] down"
Restart=always
LimitNOFILE=10032
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
